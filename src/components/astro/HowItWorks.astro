<section id="process" class="py-24 sm:py-32 lg:py-40 border-t border-[var(--border-subtle)]">
  <div class="container-page">
    <!-- Header -->
    <div class="text-center mb-16 sm:mb-20">
      <span class="label mb-3 block" data-i18n="how.label">Proceso</span>
      <h2 class="heading-lg" data-i18n="how.title">Así de simple</h2>
    </div>

    <!-- Horizontal timeline (desktop) / Vertical (mobile) -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-6 stagger">
      <!-- Step 1 -->
      <div class="relative animate-fade-in">
        <div class="flex items-center gap-3 mb-4">
          <span class="flex items-center justify-center w-8 h-8 rounded-full bg-[var(--accent-subtle)] text-[var(--accent)] text-xs font-mono font-semibold">1</span>
          <div class="hidden lg:block flex-1 h-px bg-[var(--border-subtle)]"></div>
        </div>
        <h3 class="heading-md mb-2" data-i18n="how.step1.title">Elige tu IA</h3>
        <p class="text-small" data-i18n="how.step1.desc">Usa una API Key gratuita de Groq o Google Gemini.</p>
      </div>

      <!-- Step 2 -->
      <div class="relative animate-fade-in">
        <div class="flex items-center gap-3 mb-4">
          <span class="flex items-center justify-center w-8 h-8 rounded-full bg-[var(--accent-subtle)] text-[var(--accent)] text-xs font-mono font-semibold">2</span>
          <div class="hidden lg:block flex-1 h-px bg-[var(--border-subtle)]"></div>
        </div>
        <h3 class="heading-md mb-2" data-i18n="how.step2.title">Sube tu audio</h3>
        <p class="text-small" data-i18n="how.step2.desc">Arrastra tu grabación. MP3, M4A, WAV y más.</p>
      </div>

      <!-- Step 3 -->
      <div class="relative animate-fade-in">
        <div class="flex items-center gap-3 mb-4">
          <span class="flex items-center justify-center w-8 h-8 rounded-full bg-[var(--accent-subtle)] text-[var(--accent)] text-xs font-mono font-semibold">3</span>
          <div class="hidden lg:block flex-1 h-px bg-[var(--border-subtle)]"></div>
        </div>
        <h3 class="heading-md mb-2" data-i18n="how.step3.title">La IA organiza</h3>
        <p class="text-small" data-i18n="how.step3.desc">Transcripción y organización automática con IA.</p>
      </div>

      <!-- Step 4 -->
      <div class="relative animate-fade-in">
        <div class="flex items-center gap-3 mb-4">
          <span class="flex items-center justify-center w-8 h-8 rounded-full bg-[var(--accent-subtle)] text-[var(--accent)] text-xs font-mono font-semibold">4</span>
        </div>
        <h3 class="heading-md mb-2" data-i18n="how.step4.title">Descarga tu PDF</h3>
        <p class="text-small" data-i18n="how.step4.desc">Edita y descarga un PDF profesional.</p>
      </div>
    </div>
  </div>
</section>
