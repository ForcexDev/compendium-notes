---
<nav class="fixed top-0 left-0 right-0 z-50 border-b border-[var(--border-subtle)] bg-[rgba(var(--bg-primary-rgb),0.8)] backdrop-blur-lg">
  <div class="container-page flex items-center justify-between h-14">
    <a href="/" class="flex items-center gap-2.5 no-underline">
      <div class="w-8 h-8 rounded-lg bg-[var(--accent)] flex items-center justify-center text-white overflow-hidden shadow-sm">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
        </svg>
      </div>
      <span class="text-sm font-bold text-[var(--text-primary)] hidden sm:block tracking-tight" style="font-family: 'Satoshi', sans-serif;">CompendiumNotes</span>
    </a>

    <div class="flex items-center gap-2">
      <div id="landing-links" class="flex items-center gap-1">
        <a href="/#features" class="text-sm text-[var(--text-muted)] hover:text-[var(--text-secondary)] transition-colors px-3 py-1.5 no-underline hidden sm:block" data-i18n="footer.features">Caracter√≠sticas</a>
        <a href="/#pricing" class="text-sm text-[var(--text-muted)] hover:text-[var(--text-secondary)] transition-colors px-3 py-1.5 no-underline hidden sm:block" data-i18n="footer.pricing">Precios</a>
      </div>
      
      <!-- App Specific Controls (Client-side sync) -->
      <div id="app-controls" class="hidden items-center">
        <span id="provider-badge" class="text-[10px] px-2.5 py-0.5 rounded-full flex items-center gap-1.5 font-medium border" style="background: rgba(16,185,129,0.1); color: #34d399; border-color: rgba(16,185,129,0.3);">
          <span class="w-1.5 h-1.5 rounded-full bg-emerald-400 shadow-[0_0_5px_rgba(52,211,153,0.5)]"></span>
          <span id="provider-label">Groq</span>
        </span>
      </div>

      <button id="theme-toggle" class="text-[var(--text-muted)] hover:text-[var(--text-secondary)] transition-colors p-1.5 border border-[var(--border-subtle)] rounded-md" aria-label="Toggle Theme">
        <!-- Sun (Show in Light) -->
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="block dark:hidden">
            <circle cx="12" cy="12" r="4"></circle>
            <path d="M12 2v2"></path>
            <path d="M12 20v2"></path>
            <path d="m4.93 4.93 1.41 1.41"></path>
            <path d="m17.66 17.66 1.41 1.41"></path>
            <path d="M2 12h2"></path>
            <path d="M20 12h2"></path>
            <path d="m6.34 17.66-1.41-1.41"></path>
            <path d="m19.07 4.93-1.41 1.41"></path>
        </svg>
        <!-- Moon (Show in Dark) -->
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="hidden dark:block">
            <path d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path>
        </svg>
      </button>

      <button id="lang-toggle-nav" class="text-xs text-[var(--text-muted)] hover:text-[var(--text-secondary)] transition-colors px-2.5 py-1.5 border border-[var(--border-subtle)] rounded-md font-medium">ES</button>
      
      <div id="app-config-btn" class="hidden items-center">
        <button id="config-toggle" class="text-[var(--text-muted)] hover:text-[var(--text-secondary)] transition-colors p-1.5 rounded-md" aria-label="Open Settings">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.39a2 2 0 0 0-.73-2.73l-.15-.08a2 2 0 0 1-1-1.74v-.5a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43-.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"></path><circle cx="12" cy="12" r="3"></circle></svg>
        </button>
      </div>

      <a href="/app" id="nav-open-app" class="btn-filled text-xs px-4 py-1.5 ml-2" data-i18n="nav.app">Abrir App</a>
    </div>

    <script is:inline>
      function checkAppRoute() {
        const isApp = window.location.pathname === '/app' || window.location.pathname.startsWith('/app/');
        const appControls = document.getElementById('app-controls');
        const appConfigBtn = document.getElementById('app-config-btn');
        const openAppBtn = document.getElementById('nav-open-app');
        const landingLinks = document.getElementById('landing-links');
        
        if (isApp) {
          appControls?.classList.remove('hidden');
          appControls?.classList.add('flex');
          appConfigBtn?.classList.remove('hidden');
          appConfigBtn?.classList.add('flex');
          openAppBtn?.classList.add('hidden');
          landingLinks?.classList.add('hidden');
        } else {
          appControls?.classList.add('hidden');
          appControls?.classList.remove('flex');
          appConfigBtn?.classList.add('hidden');
          appConfigBtn?.classList.remove('flex');
          openAppBtn?.classList.remove('hidden');
          landingLinks?.classList.remove('hidden');
        }
      }

      // Check on mount and navigation
      checkAppRoute();
      document.addEventListener('astro:page-load', checkAppRoute);
      document.addEventListener('astro:after-swap', checkAppRoute);
    </script>
  </div>
</nav>
